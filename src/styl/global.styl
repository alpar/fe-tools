/**
 * 全局样式
 */

$BASE_FONT_SIZE = 100px
$MAIN_COLOR = #5BC0DE
$BORDER_COLOR = #EAEAEA

html
    font-size: $BASE_FONT_SIZE
    height: 100%

body
    height: 100%
    padding: 0.15rem
    background: #EEE

body
button
input
select
textarea
    font: 0.14rem/2 "冬青黑体简体中文", "Tahoma", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", "STHeiti", "WenQuanYi Micro Hei", SimSun, sans-serif

input
textarea
    font-family: monaco, andale mono, courier new
    color: #666

a
    color: $MAIN_COLOR

.fade-transition
    transition: all .3s ease

.fade-enter
.fade-leave
    opacity: 0
    transform: translate3d(10px, 0, 0)

#toast-container
    .toast-error
        width: 5rem

.disabled
    pointer-events: none

.box
    border: 1px solid $BORDER_COLOR
    border-radius: 4px
    background: #FFF

.btn
    display: inline-flex
    text-align: center
    cursor: pointer
    padding: 0 0.1rem
    border-radius: 3px
    border: 1px solid $MAIN_COLOR
    background-color: $MAIN_COLOR
    color: #FFF

.btn:hover
    position: relative
    top: 1px
    left: 1px

.btn-cancel
    background: #FFF
    color: #666
    border-color: #DDD

.btn-success
    background-color: #5CB85C
    border-color: #4CAE4C

.btn.disabled
    opacity: 0.65

.section
    margin: 0.1rem 0

.section-leading
    margin-top: 0.3rem

.section-title
    font-weight: normal
    border-left: 3px solid #428bca
    text-indent: 0.1rem
    font-size: 0.15rem
    line-height: 1.5

.row
    display: flex
.row-item
    flex: 1